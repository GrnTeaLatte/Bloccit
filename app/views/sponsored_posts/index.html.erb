<h1>Sponsored Post</h1>

<div class="row">
  <div class="col-md-8">
    <% @sponsored_post.each do |sponsored_post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to sponsored_post.name, sponsored_post %>
          </h4>
          <small>
            <%= sponsored_post.body %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Sponsored Post", new_sponsored_post_path, class: 'btn btn-success' %>
  </div>
</div>
